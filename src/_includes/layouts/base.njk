<!doctype html>
<html lang="en">
<head>
  <base href="{{ '/' | url }}"> <!-- a <base> tag so other relative links “just work” -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title or "Marist Computing Conference" }}</title>
  <link rel="stylesheet" href="{{ '/assets/styles.css' | url }}">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=Source+Serif+4:wght@400;600&display=swap" rel="stylesheet">
  <meta name="description" content="Marist Computing Conference — November 7, 2025 — Murray Student Center">

  {% if site.is_preview %}<meta name="robots" content="noindex, nofollow">{% endif %}


</head>
<body>

    {% if site.is_preview %}
    <div style="background:#fff3cd;border-bottom:2px solid #ffec99;padding:.6rem 1rem;font-weight:600;">
      Preview site for internal review — not the official conference website.
    </div>
    {% endif %}

  <a class="skip-link" href="#content">Skip to content</a>
  <header class="site-header">
    <div class="container">
      <h1 class="site-title"><a href="/">Marist Computing Conference</a></h1>

      <nav class="site-nav" aria-label="Main">
        <a href="{{ '/' | url }}">Home</a>

        <!-- Program dropdown -->
          <div class="dropdown">
            <a href="{{ '/program/' | url }}">Program</a>
            <div class="dropdown-menu">
              <a href="{{ '/program/at-a-glance/' | url }}">At a glance</a>
              <a href="{{ '/program/full-schedule/' | url }}">Full conference schedule</a>
            </div>
          </div>

          <!-- Venue dropdown -->
          <div class="dropdown">
            <a href="{{ '/venue/' | url }}">Venue</a>
            <div class="dropdown-menu">
              <a href="{{ '/venue/campus-map/' | url }}">Campus Map</a>
            </div>
          </div>

          <!-- Registration placeholder -->
          <a href="#" class="disabled" aria-disabled="true">Registration (TBD)</a>

          <!-- About -->
          <a href="{{ '/about/' | url }}">About</a>
          
      </nav>


    </div>
  </header>

  <main id="content" class="container">
    {{ content | linkTechMeet | safe }}
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>© 2025 School of Computer Science & Mathematics, Marist University</p>
      {% if site.is_preview %}<p><em>Preview / practice build</em></p>{% endif %}
    </div>
  </footer>


</body>
</html>
